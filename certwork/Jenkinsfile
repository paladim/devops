pipeline {
    agent any
    stages {
        stage("Deploy") {
            agent {
                docker {
                    image "jenkins-agent:latest"
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                    label "jenkins-agent"
                }
            }
            steps {
                sh 'export AWS_ACCESS_KEY_ID="${aws_access_key_id}"'
                sh 'export AWS_SECRET_ACCESS_KEY="${aws_secret_access_key}"'
                sh 'export TF_VAR_AWS_ACCESS_KEY_ID="${aws_access_key_id}"'
                sh 'export TF_VAR_AWS_SECRET_ACCESS_KEY="${aws_secret_access_key}"'
                sh 'echo "${aws_access_key_id}"'
                sh 'echo $TF_VAR_AWS_ACCESS_KEY_ID'
                echo "Build start"
                sh "pwd"
                sh "ls -al"
                sh "terraform -chdir=certwork/terraform init"
                sh "terraform -chdir=certwork/terraform plan"
            }
        }
    }
}
