pipeline {
    agent any
    stages {
        stage("Deploy") {
            agent {
                docker {
                    image "jenkins-agent:latest"
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                    label "jenkins-agent"
                }
            }
            steps {
                export AWS_ACCESS_KEY_ID="${aws_access_key_id}"
                export AWS_SECRET_ACCESS_KEY="${aws_secret_access_key}"
                echo "Build start"
                sh "pwd"
                sh "ls -al"
                sh "terraform -chdir=certwork/terraform init"
                sh "terraform -chdir=certwork/terraform plan"
            }
        }
    }
}
